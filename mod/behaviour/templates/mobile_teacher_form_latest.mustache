{{!
    @template mod_behaviour/mobile_user_form

    The page to take behaviour

    Classes required for JS:
    * None

    Data attibutes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * behaviour
    * summary
    * cmid

    Example context (json):
    {
        "behaviour": {
            "id": "1",
            "course": "2",
            "name": "Class Behaviour",
            "intro": "Intro"
        },
        "cmid": "25",
        "courseid": "4",
        "sessid": "43",
        "btnargs" : ""
    }
}}
{{=<% %>=}}
<div class="behaviour_mobile_teacher_form">
    <span class="description">
    <core-course-module-description description="<% behaviour.intro %>" component="mod_behaviour" componentId="<% cmid %>"></core-course-module-description>
    </span>
    <%#showmessage%>
        <%#messages%>
            <span class="messages">
                <ion-item class="ion-text-wrap">
                    <ion-label>{{ 'plugin.mod_behaviour.<% string %>' | translate }}</ion-label>
                </ion-item>
            </span>
        <%/messages%>
    <%/showmessage%>
    <span class="behaviour_selectall">
        <ion-item class="ion-text-wrap">
            <ion-label>{{ 'plugin.mod_behaviour.setallstatuses' | translate }}</ion-label>
        </ion-item>
        <ion-radio-group [(ngModel)]="CONTENT_OTHERDATA.statusall" (ionChange)="<% selectall %>">
        <%#statuses%>

            <span class="radiolabel">
                <ion-item class="ion-text-wrap">
                    <ion-label><% acronym %></ion-label>
                    <ion-radio value="<% stid %>"></ion-radio>
                </ion-item>
            </span>
        <%/statuses%>
        </ion-radio-group>
    </span>
    <%#users%>
    <span class="behaviour_user_row">
    <!-- User and status of the submission. -->
    <ion-item class="ion-text-wrap" title="<% fullname %>">
        <ion-avatar slot="start">
            <img src="<% profileimageurl %>" core-external-content role="presentation" onError="this.src='assets/img/user-avatar.png'">
        </ion-avatar>
        <ion-label>
            <h2><% fullname %></h2>
        </ion-label>
    </ion-item>
    <ion-radio-group [(ngModel)]="CONTENT_OTHERDATA.status<% userid %>">
        <%#statuses%>
        <span class="radiolabel">
            <ion-item class="ion-text-wrap">
                <ion-label><% acronym %></ion-label>
                <ion-radio value="<% stid %>"></ion-radio>
            </ion-item>
        </span>
        <%/statuses%>
    </ion-radio-group>
    </span>
    <%/users%>
    <ion-button class="ion-margin" expand="block" core-site-plugins-new-content component="mod_behaviour" method="mobile_view_activity" [args]="{cmid: <% cmid %>, courseid: <% courseid %>, sessid: <% sessid %><% btnargs %>}">
        {{ 'plugin.mod_behaviour.submitbehaviour' | translate }}
    </ion-button>

</div>